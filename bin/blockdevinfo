#!/bin/bash

printf "#--# cat /proc/scsi/scsi\n"
cat /proc/scsi/scsi

printf "#--# cmd sudo blockdev --report\n"
sudo blockdev --report

printf "#--# cmd sudo parted -s -l\n"
sudo parted -s -l

printf "#--# cat /proc/mdstat\n"
cat /proc/mdstat

printf "#--# sudo find /dev/disk -ls\n"
sudo find /dev/disk -ls

